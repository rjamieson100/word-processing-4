def WordlePanic (listy):
    '''
    this function takes a word from a list and determines if you could guess
    the wordle based off the other words in the list.
    @param list: the list of words from the text file
    @return: none, but it prints a list of words?
    '''
    x = 0
    word_list = []
    while x < len(listy):
        word_count = 0
        incorrect_letters = 0
        #print(x)
        word = listy[x]
        n = x+1
        #this is for later, if there are two of the exact same word
        wrong_letter = -1


        while n < len(listy):
            next_word = listy[n]
            for i in range(len(listy[x])):
                if word[i] != next_word[i]:
                    incorrect_letters += 1
                    if incorrect_letters == 1:
                        wrong_letter = i
                        print (wrong_letter)
            if incorrect_letters == 1:
                word_count += 1
            elif incorrect_letters > 1:
                break
            n += 1
            incorrect_letters = 0;

        if word_count >= 5:
            print ("Yay!")
            wordle_word = ""
            for i in listy[x]:
                if i == word[wrong_letter]:
                    wordle_word += "_"
                else:
                    wordle_word += i
            word_list.append(wordle_word)
        else:
            print ("OHH!")
 
        x += word_count+1

    print(word_list)



practice_list = ["Shade", "Shake", "Share", "Shape", "Shave","Shame","Basic",
                 "Basil", "Basis", "Basin"]
WordlePanic (practice_list)
                    
